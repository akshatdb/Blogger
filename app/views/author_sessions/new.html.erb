<div class = "login">
<img alt="user_logo" id="user_logo" src="assets/user.png"/>
<h1>Login</h1>
<%= form_tag author_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil,placeholder: "EMAIL" %>
    <br/>
  </div>
  <br>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, placeholder: "PASSWORD" %>
    <br/>
  </div>
  <br>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
</div>
